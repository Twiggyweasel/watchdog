<div class="row v-c">
    <div class="m-y-2 col-xs-12">
        <div class="card card-block" style="box-shadow: 0 0 6px rgba(0,0,0,.16),0 6px 12px rgba(0,0,0,.32);">
            <div class="container-fluid">
                <h3 class="m-t-1 text-xs-center">All Records</h3>
                <div class="row m-t-3">
                <%= form_for_filterrific @filterrific do |f| %>
                    <div class="row">
                        <div class="col-xs-12">
                            <%= link_to(
                            'Reset filters',
                            reset_filterrific_url, class:"color btn btn-sm btn-primary pull-xs-right"
                            ) %>
                        </div>
                    </div>
                <div class="row">
                    <div class="col-xs-3">
                        Search
                        <%= f.text_field(
                        :search_query,
                        class: 'filterrific-periodically-observed form-control'
                        ) %>
                    </div>
                    <div class="col-xs-4">
                        Sorted by
                        <%= f.select(:sorted_by, @filterrific.select_options[:sorted_by], {} , { class:"form-control"}) %>
                    </div>
                    <div class="col-xs-3">
                        Archive Status
                        <%= f.select(
                          :with_archive_status,
                          @filterrific.select_options[:with_archive_status],
                          { include_blank: '- Any -' },
                          { class:"form-control" }
                        ) %>
                    </div>
                </div>
                <% end %>
                </div>
                <div class="row">
                    <%= render(
                    partial: 'people/list',
                    locals: { people: @people }
                    ) %>
                </div>

                <div class="p-t-3 text-xs-center" style="border-top: 2px solid #eceeef;">
                    <%= link_to "Add Record", new_person_path, class:'color btn btn-primary m-b-2' %>
                    <%= link_to "Active Records", active_path, class:'color btn btn-primary m-b-2' %>
                    <%= link_to "Archived Records", archive_path, class:'color btn btn-primary m-b-2' %>
                </div>                
            </div>
        </div>
    </div>    
</div>
