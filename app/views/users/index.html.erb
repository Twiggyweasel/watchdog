<div class="row v-c">
    <div class="m-y-2 col-md-12">
        <div class="card card-block" style="box-shadow: 0 0 6px rgba(0,0,0,.16),0 6px 12px rgba(0,0,0,.32); height: 597.75px;">
          <div class="container-fluid">
            <div class="row m-t-3">
    <%= form_for_filterrific @filterrific do |f| %>
    <div class="row">
      <div class="col-xs-12">
    <div class="pull-xs-right">
      <%= link_to(
      'Reset filters',
      reset_filterrific_url, class:"color btn btn-sm btn-primary"
    ) %>
    </div>
    </div>
    </div>
    <div class="row">
     <div class="col-xs-3">
       Search
       <%= f.text_field(
      :search_query,
      class: 'filterrific-periodically-observed form-control'
    ) %>
     </div>
     <div class="col-xs-3">
    Sorted by
    <%= f.select(:sorted_by, @filterrific.select_options[:sorted_by], {} , { class:"form-control"}) %>
  </div>
   <div class="col-xs-3">
    Department
    <%= f.select(
      :with_deptartment_id,
      @filterrific.select_options[:with_deptartment_id],
      { include_blank: '- Any -' },
      { class:"form-control" }
    ) %>
  </div>
     <div class="col-xs-3">
    Access
    <%= f.select(
      :with_clearance_id,
      @filterrific.select_options[:with_clearance_id],
      { include_blank: '- Any -' },
      { class:"form-control" }
    ) %>
  </div>
  </div>
  <!--<#%= render_filterrific_spinner %>-->
  <% end %>
</div>
<div class="row">
    <%= render(
  partial: 'users/list',
  locals: { users: @userss }
) %>
</div>

        </div>
        </div>
    </div>
</div>    


